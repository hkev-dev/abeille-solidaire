<div class="flex border-b border-gray-200 mb-6">
    <nav class="flex space-x-8" aria-label="Settings">
        {% for item in [
            {
                label: 'Général',
                icon: 'ki-shield-tick',
                route: 'app.admin.setting.general',
            },
            {
                label: 'Slider',
                icon: 'ki-slider-horizontal-2',
                route: 'app.admin.setting.slide'
            },
        ] %}
            <a href="{{ path(item.route) }}" 
               class="flex items-center gap-2 py-4 border-b-2 px-1 
                      {{ app.request.get('_route') == item.route 
                         ? 'border-primary text-primary' 
                         : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' }}">
                <i class="ki-duotone {{ item.icon }} fs-2"></i>
                <span class="font-medium">{{ item.label }}</span>
                {# {% if item.badge is defined %}
                    <span class="badge {{ item.badge.class }} text-xs">
                        {{ item.badge.text }}
                    </span>
                {% endif %} #}
            </a>
        {% endfor %}
    </nav>
</div>
