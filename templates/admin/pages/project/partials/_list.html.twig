<div class="card">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Titre</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Objectif</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fond reçu</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Auteur</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
            {% for project in pagination %}
                <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                            <span class="text-sm font-medium text-gray-900 max-w-[200px] truncate">{{ project.title }}</span>
                        </div>
                    </td>
                    <td class="px-6 py-4">
                        <div class="text-sm text-gray-900">{{ project.goal|number_format(2) }} €</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="text-sm font-medium">
                            {{ project.receivedAmount|number_format(2) }} €
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {{ project.creator.fullName|default('') }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center gap-2">
                            <a href="{{ path('app.admin.project.detail', {id: project.id}) }}"
                               class="btn btn-sm btn-light-primary">
                                <i class="ki-duotone ki-pencil text-primary"></i>
                                Detail
                            </a>
                            <a href="{{ path('app.admin.project.delete', {id: project.id}) }}"
                               class="btn btn-sm btn-light-danger">
                                <i class="ki-duotone ki-trash text-danger"></i>
                                Supprimer
                            </a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="px-6 py-4 text-center text-sm text-gray-500">
                        Aucune activité récente
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% include 'admin/components/pagination.html.twig' with {
            'paginationData': pagination.getPaginationData
        } %}
    </div>
</div>
