
        <div class="grid grid-cols-1 lg:grid-cols-5 gap-8">
            {# Form Section #}
            <div class="lg:col-span-2">
                <div class="card">
                    <div class="p-6">
                        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                            {# Title #}
                            <div>
                                {{ form_label(form.title, null, {
                                    'label_attr': {
                                        'class': 'text-sm font-medium text-gray-900 dark:text-gray-100 mb-2 block'
                                    }
                                }) }}
                                {{ form_widget(form.title, {
                                    'attr': {
                                        'class': 'input'
                                    }
                                }) }}
                                {{ form_errors(form.title) }}
                            </div>

                            {# Category #}
                            {#<div>
                                {{ form_label(form.category, null, {
                                    'label_attr': {
                                        'class': 'text-sm font-medium text-gray-900 dark:text-gray-100 mb-2 block'
                                    }
                                }) }}
                                {{ form_widget(form.category, {
                                    'attr': {
                                        'class': 'select'
                                    }
                                }) }}
                                {{ form_errors(form.category) }}
                            </div>#}

                            <div>
                                {{ form_label(form.about, null, {
                                    'label_attr': {
                                        'class': 'text-sm font-medium text-gray-900 dark:text-gray-100 mb-2 block'
                                    }
                                }) }}
                                {{ form_widget(form.about, {
                                    'attr': {
                                        'class': 'textarea',
                                        'rows': '4'
                                    }
                                }) }}
                                {{ form_errors(form.about) }}
                            </div>

                            {# Description #}
                            <div>
                                {{ form_label(form.description, null, {
                                    'label_attr': {
                                        'class': 'text-sm font-medium text-gray-900 dark:text-gray-100 mb-2 block'
                                    }
                                }) }}
                                {{ form_widget(form.description, {
                                    'attr': {
                                        'class': 'textarea',
                                        'rows': '6'
                                    }
                                }) }}
                                {{ form_errors(form.description) }}
                            </div>

                            {# Dates Row #}
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    {{ form_label(form.email, null, {
                                        'label_attr': {
                                            'class': 'text-sm font-medium text-gray-900 dark:text-gray-100 mb-2 block'
                                        }
                                    }) }}
                                    {{ form_widget(form.email, {
                                        'attr': {
                                            'class': 'input',
                                            'data-control': 'flatpickr'
                                        }
                                    }) }}
                                    {{ form_errors(form.email) }}
                                </div>
                                <div>
                                    {{ form_label(form.phone, null, {
                                        'label_attr': {
                                            'class': 'text-sm font-medium text-gray-900 dark:text-gray-100 mb-2 block'
                                        }
                                    }) }}
                                    {{ form_widget(form.phone, {
                                        'attr': {
                                            'class': 'input',
                                            'data-control': 'flatpickr'
                                        }
                                    }) }}
                                    {{ form_errors(form.phone) }}
                                </div>
                            </div>

                            <div>
                                {{ form_label(form.website, null, {
                                    'label_attr': {
                                        'class': 'text-sm font-medium text-gray-900 dark:text-gray-100 mb-2 block'
                                    }
                                }) }}
                                {{ form_widget(form.website, {
                                    'attr': {
                                        'class': 'input'
                                    }
                                }) }}
                                {{ form_errors(form.website) }}
                            </div>

                            {# Project Image #}
                            <div>
                                {{ form_label(form.imageFile, null, {
                                    'label_attr': {
                                        'class': 'text-sm font-medium text-gray-900 dark:text-gray-100 mb-2 block'
                                    }
                                }) }}
                                <div class="image-input h-[300px] w-full" data-image-input="true">
                                    {# File input #}
                                    {{ form_widget(form.imageFile, {
                                        'attr': {
                                            'class': 'visual-hidden',
                                            'accept': 'image/jpeg,image/png'
                                        }
                                    }) }}

                                    {# Hidden input for remove action #}
                                    <input type="hidden" name="image_remove"/>

                                    {# Remove button #}
                                    <span class="btn btn-icon btn-circle btn-active-color-primary w-7 h-7 bg-white absolute top-2 right-2 hidden image-input-changed:flex z-10" data-image-input-remove>
                                        <i class="ki-duotone ki-cross fs-2"></i>
                                    </span>

                                    {# Placeholder with preview #}
                                    <div class="image-input-placeholder w-full h-full border-2 border-dashed border-gray-300 rounded-lg">
                                        <div class="image-input-preview w-full h-full bg-cover bg-center bg-no-repeat"></div>

                                        {# Upload icon overlay #}
                                        <div class="hidden image-input-empty:flex items-center justify-center absolute inset-0 cursor-pointer">
                                            <div class="text-center p-4">
                                                <i class="ki-duotone ki-picture fs-3x text-gray-400 mb-4"></i>
                                                <p class="text-sm text-gray-600">Cliquez pour sélectionner</p>
                                                <p class="text-xs text-gray-400 mt-1">JPG, PNG (max 5MB)</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {{ form_errors(form.imageFile) }}
                            </div>

                            {# Submit Buttons #}
                            <div class="flex justify-end space-x-4 pt-4">
                                <a href="{{ path('app.user.dashboard') }}" class="btn btn-light">
                                    Annuler
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="ki-duotone ki-save-2 fs-2 me-2"></i>
                                    Créer le service
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

{% block javascripts %}
    <script>
        // Initialize flatpickr
        flatpickr('[data-control="flatpickr"]', {
            enableTime: false,
            dateFormat: "Y-m-d",
            minDate: "today"
        });

        // Initialize select2
        $('select.select').select2({
            minimumResultsForSearch: 10,
            theme: 'tailwind'
        });

        // Initialize image input
        document.addEventListener('DOMContentLoaded', function () {
            KTImageInput.init();
        });
    </script>
{% endblock %}