<div class="card">
    <div class="p-6">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        {# Title #}
        <div>
            {{ form_label(form.name, null, {
                'label_attr': {
                    'class': 'text-sm font-medium text-gray-900 dark:text-gray-100 mb-2 block'
                }
            }) }}
            {{ form_widget(form.name, {
                'attr': {
                    'class': 'input'
                }
            }) }}
            {{ form_errors(form.name) }}
        </div>

        {# Subtitle #}
        <div>
            {{ form_label(form.content, null, {
                'label_attr': {
                    'class': 'text-sm font-medium text-gray-900 dark:text-gray-100 mb-2 block'
                }
            }) }}
            {{ form_widget(form.content, {
                'attr': {
                    'class': 'textarea'
                }
            }) }}
            {{ form_errors(form.content) }}
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            {# position #}
            <div class="col-span-1">
                {{ form_label(form.position, null, {
                    'label_attr': {
                        'class': 'text-sm font-medium text-gray-900 dark:text-gray-100 mb-2 block'
                    }
                }) }}
                {{ form_widget(form.position, {
                    'attr': {
                        'class': 'input',
                    }
                }) }}
                {{ form_errors(form.position) }}
            </div>

            {# Is ACtive #}
            <div class="col-span-1">
                {{ form_label(form.rating, null, {
                    'label_attr': {
                        'class': 'text-sm font-medium text-gray-900 dark:text-gray-100 mb-2 block'
                    }
                }) }}
                {{ form_widget(form.rating, {
                    'attr': {
                        'class': 'input'
                    }
                }) }}
                {{ form_errors(form.rating) }}
            </div>
        </div>

        {# Project Image #}
        <div>
            {{ form_label(form.imageFile, null, {
                'label_attr': {
                    'class': 'text-sm font-medium text-gray-900 dark:text-gray-100 mb-2 block'
                }
            }) }}
            <div class="image-input h-[300px] w-full" data-image-input="true">
                {# File input #}
                {{ form_widget(form.imageFile, {
                    'attr': {
                        'class': 'visual-hidden',
                        'accept': 'image/jpeg,image/png'
                    }
                }) }}

                {# Hidden input for remove action #}
                <input type="hidden" name="image_remove"/>

                {# Remove button #}
                <span class="btn btn-icon btn-circle btn-active-color-primary w-7 h-7 bg-white absolute top-2 right-2 hidden image-input-changed:flex z-10" data-image-input-remove>
                                        <i class="ki-duotone ki-cross fs-2"></i>
                                    </span>

                {# Placeholder with preview #}
                <div class="image-input-placeholder w-full h-full border-2 border-dashed border-gray-300 rounded-lg">
                    {% if testimonial is defined and testimonial.imageName %}
                        <div class="image-input-preview w-full h-full bg-cover bg-center bg-no-repeat"
                             style="background-image: url('{{ vich_uploader_asset(testimonial, 'imageFile') }}')"></div>
                    {% else %}
                        <div class="image-input-preview w-full h-full bg-cover bg-center bg-no-repeat"></div>
                    {% endif %}

                    {# Upload icon overlay #}
                    <div class="hidden image-input-empty:flex items-center justify-center absolute inset-0 cursor-pointer">
                        <div class="text-center p-4">
                            <i class="ki-duotone ki-picture fs-3x text-gray-400 mb-4"></i>
                            <p class="text-sm text-gray-600">Cliquez pour s√©lectionner</p>
                            <p class="text-xs text-gray-400 mt-1">JPG, PNG (max 5MB)</p>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_errors(form.imageFile) }}
        </div>

        {# Submit Buttons #}
        <div class="flex justify-end space-x-4 pt-4">
            <div class="flex-grow"></div>
            <a href="{{ path('app.admin.setting.slide') }}" class="btn btn-light">
                Annuler
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="ki-duotone ki-save-2 fs-2 me-2"></i>
                Enregistrer les modifications
            </button>
        </div>
        {{ form_end(form) }}
    </div>
</div>