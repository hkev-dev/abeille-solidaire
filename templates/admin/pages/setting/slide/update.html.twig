{% extends 'admin/pages/setting/layout.html.twig' %}

{% block page_title %}Paramètres - Slider - Mise à jour
{% endblock %}

{% block settings_content %}
    <div class="container-fixed max-w-3xl mx-auto">
        {# Page Header #}
        <div class="mb-8">
            <h1 class="text-2xl font-semibold text-gray-900 dark:text-white">Modifier le Projet</h1>
            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
                Mettez à jour les informations du projet.
            </p>
        </div>

        <div class="card">
            <div class="p-6">
                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                {# Title #}
                <div>
                    {{ form_label(form.title, null, {
                        'label_attr': {
                            'class': 'text-sm font-medium text-gray-900 dark:text-gray-100 mb-2 block'
                        }
                    }) }}
                    {{ form_widget(form.title, {
                        'attr': {
                            'class': 'input'
                        }
                    }) }}
                    {{ form_errors(form.title) }}
                </div>

                {# Subtitle #}
                <div>
                    {{ form_label(form.subtitle, null, {
                        'label_attr': {
                            'class': 'text-sm font-medium text-gray-900 dark:text-gray-100 mb-2 block'
                        }
                    }) }}
                    <div class="input-group">
                        {{ form_widget(form.subtitle, {
                            'attr': {
                                'class': 'input',
                                'placeholder': '0.00',
                                'min': '0',
                                'data-control': 'input'
                            }
                        }) }}
                        <span class="btn btn-secondary">€</span>
                    </div>
                    {{ form_errors(form.subtitle) }}
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    {# position #}
                    <div class="col-span-1">
                        {{ form_label(form.position, null, {
                            'label_attr': {
                                'class': 'text-sm font-medium text-gray-900 dark:text-gray-100 mb-2 block'
                            }
                        }) }}
                        {{ form_widget(form.position, {
                            'attr': {
                                'class': 'input',
                            }
                        }) }}
                        {{ form_errors(form.position) }}
                    </div>

                    {# Is ACtive #}
                    <div class="col-span-1">
                        {{ form_label(form.isActive, null, {
                            'label_attr': {
                                'class': 'text-sm font-medium text-gray-900 dark:text-gray-100 mb-2 block'
                            }
                        }) }}
                        {{ form_widget(form.isActive, {
                            'attr': {
                                'class': 'select'
                            }
                        }) }}
                        {{ form_errors(form.isActive) }}
                    </div>
                </div>

                {# Project Image #}
                <div>
                    {{ form_label(form.imageFile, null, {
                        'label_attr': {
                            'class': 'text-sm font-medium text-gray-900 dark:text-gray-100 mb-2 block'
                        }
                    }) }}
                    <div class="image-input h-[300px] w-full" data-image-input="true">
                        {# File input #}
                        {{ form_widget(form.imageFile, {
                            'attr': {
                                'class': 'visual-hidden',
                                'accept': 'image/jpeg,image/png'
                            }
                        }) }}

                        {# Hidden input for remove action #}
                        <input type="hidden" name="image_remove"/>

                        {# Remove button #}
                        <span class="btn btn-icon btn-circle btn-active-color-primary w-7 h-7 bg-white absolute top-2 right-2 hidden image-input-changed:flex z-10"
                              data-image-input-remove>
                                        <i class="ki-duotone ki-cross fs-2"></i>
                                    </span>

                        {# Placeholder with preview #}
                        <div class="image-input-placeholder w-full h-full border-2 border-dashed border-gray-300 rounded-lg">
                            {% if slide.imageName %}
                                <div class="image-input-preview w-full h-full bg-cover bg-center bg-no-repeat"
                                     style="background-image: url('{{ vich_uploader_asset(slide, 'imageFile') }}')"></div>
                            {% endif %}

                            {# Upload icon overlay #}
                            <div class="{% if slide.imageName %}hidden{% else %}flex{% endif %} image-input-empty:flex items-center justify-center absolute inset-0 cursor-pointer">
                                <div class="text-center p-4">
                                    <i class="ki-duotone ki-picture fs-3x text-gray-400 mb-4"></i>
                                    <p class="text-sm text-gray-600">Cliquez pour modifier</p>
                                    <p class="text-xs text-gray-400 mt-1">JPG, PNG (max 5MB)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_errors(form.imageFile) }}
                </div>

                {# Submit Buttons #}
                <div class="flex justify-end space-x-4 pt-4">
                    <div class="flex-grow"></div>
                    <a href="{{ path('app.admin.setting.slide') }}" class="btn btn-light">
                        Annuler
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="ki-duotone ki-save-2 fs-2 me-2"></i>
                        Enregistrer les modifications
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    {# Delete Confirmation Modal #}
    <div class="modal fade" tabindex="-1" id="deleteProjectModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmer la suppression</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Êtes-vous sûr de vouloir supprimer ce projet ? Cette action est irréversible.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Annuler</button>
                    <form method="POST" action="{{ path('app.admin.setting.slide.delete', {id: slide.id}) }}"
                          class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ slide.id) }}">
                        <button type="submit" class="btn btn-danger">Confirmer la suppression</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Initialize image input
        document.addEventListener('DOMContentLoaded', function () {
            KTImageInput.init();
        });
    </script>
{% endblock %}
