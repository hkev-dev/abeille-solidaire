{# templates/pages/projects/index.html.twig #}
{% extends 'public/base.html.twig' %}

{% block title %}Projets - Abeille Solidaire{% endblock %}

{% block content %}
    {# Page Header #}
    {% include 'public/components/page-header.html.twig' with {
        title: 'Nos Projets',
        breadcrumbs: [
            {label: 'Accueil', path: 'landing.home'},
            {label: 'Projets', path: null}
        ]
    } %}

    {# Project List Section #}
    <section class="project-page-one">
        <div class="container">
            <div class="row">
                {% for project in projects %}
                    <div class="col-xl-4 col-lg-6 col-md-6">
                        {% include 'public/components/project-card.html.twig' with { project: project } %}
                    </div>
                {% else %}
                    <div class="col-12">
                        <div class="alert alert-info text-center">
                            Aucun projet trouv√©.
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="row mt-5">
                <div class="col-12 d-flex justify-content-center">
                    {{ knp_pagination_render(projects, 'public/components/pagination.html.twig') }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
