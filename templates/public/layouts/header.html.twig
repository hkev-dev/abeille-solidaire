<header
	class="main-header">
	{# Top Header Section #}
	<div class="main-header__top">
		<div class="main-header__top-inner">
			<div class="main-header__top-left">
				<ul class="list-unstyled main-header__contact-list">
					<li>
						<div class="icon">
							<i class="fas fa-map-marker-alt"></i>
						</div>
						<div class="text">
							<p>{{ site_config.contact.address }}</p>
						</div>
					</li>
					<li>
						<div class="icon">
							<i class="fas fa-envelope"></i>
						</div>
						<div class="text">
							<p>
								<a href="mailto:{{ site_config.contact.email }}">{{ site_config.contact.email }}</a>
							</p>
						</div>
					</li>
				</ul>
			</div>
			<div class="main-header__top-right">
				<div class="main-header__login">
					<ul class="list-unstyled main-header__login-list">
						{% if app.user %}
							<li>
								<div class="dropdown">
									<a href="#" class="dropdown-toggle" data-bs-toggle="dropdown">
										<i class="icon-account"></i>
										{% if app.user.username is defined %}
											{{ app.user.username }}
										{% else %}
											{{ app.user.userIdentifier }}
										{% endif %}
									</a>
									<ul class="dropdown-menu">
										{% if is_granted('ROLE_ADMIN') %}
											<li style="margin-left: 0">
												<a class="dropdown-item" href="{{ path('admin') }}">Administration</a>
											</li>
										{% endif %}
										<li style="margin-left: 0">
											<a class="dropdown-item" href="#">Mon Profil</a>
										</li>
										<li style="margin-left: 0">
											<a class="dropdown-item" href="{{ path('app.logout') }}">DÃ©connexion</a>
										</li>
									</ul>
								</div>
							</li>
						{% else %}
							<li>
								<a href="{{ path('app.login') }}">
									<i class="icon-account"></i>
									Connexion</a>
							</li>
							<li>
								<a href="{{ path('app.register') }}">S'inscrire</a>
							</li>
						{% endif %}
					</ul>
				</div>
				<div class="main-header__social">
					<a href="{{ site_config.social.twitter }}">
						<i class="fab fa-twitter"></i>
					</a>
					<a href="{{ site_config.social.facebook }}">
						<i class="fab fa-facebook"></i>
					</a>
					<a href="{{ site_config.social.pinterest }}">
						<i class="fab fa-pinterest-p"></i>
					</a>
					<a href="{{ site_config.social.instagram }}">
						<i class="fab fa-instagram"></i>
					</a>
				</div>
			</div>
		</div>
	</div>


	{# Main Navigation #}
	<nav class="main-menu">
		<div class="main-menu__wrapper">
			<div class="main-menu__wrapper-inner d-flex align-items-center justify-content-between">
				<div class="main-menu__left d-flex align-items-center gap-4">
					<div class="main-menu__logo">
						<a href="{{ path('landing.home') }}">
							<img src="{{ asset('images/app/logo-3.png') }}" alt="" style="max-height: 60px; width: auto;">
						</a>
					</div>
					<div class="main-menu__main-menu-box">
						<a href="#" class="mobile-nav__toggler">
							<i class="fa fa-bars"></i>
						</a>
						<ul class="main-menu__list d-flex align-items-center m-0 p-0">
							{% include 'public/layouts/navigation.html.twig' %}
						</ul>
					</div>
				</div>
				<div class="main-menu__right">
					<div class="main-menu__call-search-btn-box d-flex align-items-center gap-3">
						<div class="main-menu__call d-flex align-items-center gap-2">
							<div class="main-menu__call-icon">
								<i class="fas fa-phone"></i>
							</div>
							<div class="main-menu__call-content">
								<p class="main-menu__call-sub-title m-0">Appelez-nous</p>
								<h5 class="main-menu__call-number m-0">
									<a href="tel:{{ site_config.contact.phone|replace({' ': '', '(': '', ')': '', '-': ''}) }}">
										{{ site_config.contact.phone }}
									</a>
								</h5>
							</div>
						</div>
						<div class="main-menu__search-box">
							<a href="#" class="main-menu__search search-toggler icon-magnifying-glass"></a>
						</div>
						<div class="main-menu__btn-box">
							{% if app.user %}
								<a href="{{ path('app.user.dashboard') }}" class="thm-btn main-menu__btn">
									<i class="icon-benchmark fs-4"></i>Tableau de bord
								</a>
							{% else %}
								<a href="{{ path('app.register') }}" class="thm-btn main-menu__btn">
									<i class="icon-plus-symbol"></i>Ajouter un Projet
								</a>
							{% endif %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</nav>
</header>

{# Sticky Header #}
<div class="stricky-header stricked-menu main-menu">
	<div class="sticky-header__content"></div>
</div>
