<footer
	class="site-footer">
	{# Footer Top Section #}
	<div class="site-footer__top">
		<div class="site-footer__shape-1 float-bob-x">
			<img src="{{ asset('landing/images/shapes/site-footer-shape-1.png') }}" alt="">
		</div>
		<div class="container">
			<div
				class="row align-items-center">
				{# About Widget #}
				<div class="col-xl-4 col-lg-6 col-md-6 wow fadeInUp" data-wow-delay="100ms">
					<div class="footer-widget__column footer-widget__about">
						<div class="footer-widget__logo">
							<a href="{{ path('landing.home') }}">
								<img src="{{ asset('images/app/logo-3.png') }}" alt="" style="max-height: 200px; width: auto;">
							</a>
						</div>
						{#<div class="footer-widget__about-text-box">
							<p class="footer-widget__about-text">
								{{ site_config.description }}
							</p>
						</div>#}
						<form class="footer-widget__subscribe-box">
							<div class="footer-widget__subscribe-input-box">
								<input type="email" placeholder="Adresse e-mail" name="email">
								<button type="submit" class="footer-widget__subscribe-btn">
									<img src="{{ asset('landing/images/icon/paper-plan.png') }}" alt="">
								</button>
							</div>
						</form>
					</div>
				</div>

				<div class="col-xl-8 col-lg-6 col-md-6 wow fadeInUp" data-wow-delay="100ms">
					<div
						class="row">
						{# Explore Widget #}
						<div class="col-xl-3 col-lg-6 col-md-12 wow fadeInUp" data-wow-delay="200ms">
							<div class="footer-widget__column footer-widget__Explore">
								<div class="footer-widget__title-box">
									<h3 class="footer-widget__title">À Propos</h3>
								</div>
								<ul class="footer-widget__Explore-list list-unstyled">
									{% for item in site_config.footer_sections.about %}
										<li>
											<a href="{{ item.url }}">{{ item.title }}</a>
										</li>
									{% endfor %}
								</ul>
							</div>
						</div>

						{# Fundraising Widget #}
						<div class="col-xl-3 col-lg-6 col-md-12 wow fadeInUp" data-wow-delay="300ms">
							<div class="footer-widget__column footer-widget__Fundraising">
								<div class="footer-widget__title-box">
									<h3 class="footer-widget__title">Pour Vous</h3>
								</div>
								<ul class="footer-widget__Explore-list list-unstyled">
									{% for item in site_config.footer_sections.for_you %}
										<li>
											<a href="{{ item.url }}">{{ item.title }}</a>
										</li>
									{% endfor %}
								</ul>
							</div>
						</div>

						{# Contact Widget #}
						<div class="col-xl-6 col-lg-6 col-md-12 wow fadeInUp" data-wow-delay="400ms">
							<div class="footer-widget__column footer-widget__Contact">
								<div class="footer-widget__title-box">
									<h3 class="footer-widget__title">Contact</h3>
								</div>
								<ul class="footer-widget__Contact-list list-unstyled">
									{#<li>
										<div class="icon">
											<span class="icon-telephone"></span>
										</div>
										<div class="text">
											<p>
												<a href="tel:{{ site_config.contact.phone|replace({' ': '', '(': '', ')': '', '-': ''}) }}">{{ site_config.contact.phone }}</a>
											</p>
										</div>
									</li>#}
									<li>
										<div class="icon">
											<span class="icon-email"></span>
										</div>
										<div class="text">
											<p>
												<a href="mailto:{{ site_config.contact.email }}">{{ site_config.contact.email }}</a>
											</p>
										</div>
									</li>
									<li>
										<div class="icon">
											<span class="icon-pin"></span>
										</div>
										<div class="text">
											<p>{{ site_config.contact.secondary_address }}</p>
										</div>
									</li>
								</ul>
								<div class="site-footer__social">
									<a href="{{ site_config.social.twitter }}">
										<i class="fab fa-twitter"></i>
									</a>
									<a href="{{ site_config.social.facebook }}">
										<i class="fab fa-facebook"></i>
									</a>
									<a href="{{ site_config.social.pinterest }}">
										<i class="fab fa-pinterest"></i>
									</a>
									<a href="{{ site_config.social.instagram }}">
										<i class="fab fa-instagram"></i>
									</a>
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>

	{# Footer Bottom Section #}
	<div class="site-footer__bottom">
		<div class="container">
			<div class="row">
				<div class="col-xl-12">
					<div class="site-footer__bottom-inner">
						<p class="site-footer__bottom-text">© Tous droits réservés
							{{ "now"|date("Y") }}
							par
							<a href="#">{{ site_name }}</a>
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</footer>
