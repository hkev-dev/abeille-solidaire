{# Quick Actions #}
<div class="space-y-3">
    <a href="{{ path("app.user.donations.make_supplementary") }}" class="w-full inline-flex items-center justify-center px-4 py-2.5 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
        <span class="ki-duotone ki-gift text-white mr-2 text-lg"></span>
        Faire un don supplémentaire
    </a>
    
    {% if canWithdraw %}
        <a href="{{ path('app.user.wallet.withdraw') }}" class="w-full inline-flex items-center justify-center px-4 py-2.5 border-2 border-indigo-600 rounded-lg shadow-sm text-sm font-medium text-indigo-700 bg-white hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
            <span class="ki-duotone ki-bank text-indigo-600 mr-2 text-lg"></span>
            Retirer des fonds
            <span class="ml-1 text-xs text-indigo-500">(Min. 50€)</span>
        </a>
    {% else %}
        <div class="group relative">
            <button disabled class="w-full inline-flex items-center justify-center px-4 py-2.5 border-2 border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-500 bg-gray-100 cursor-not-allowed">
                <span class="ki-duotone ki-lock-2 mr-2 text-lg"></span>
                Retirer des fonds
            </button>
            <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 hidden group-hover:block w-64 z-10">
                <div class="bg-gray-900 text-white text-xs rounded p-2 shadow-lg">
                    <p class="font-medium">Conditions requises pour le retrait :</p>
                    <ul class="mt-1 space-y-1 list-disc list-inside">
                        {% if not membershipInfo.isActive %}
                            <li>Adhésion annuelle active</li>
                        {% endif %}
                        {% if not isKycVerified %}
                            <li>Vérification KYC complétée</li>
                        {% endif %}
                        {% if user.matrixDepth < 3 %}
                            <li>Minimum 4 niveaux dans votre branche</li>
                        {% endif %}
                        {% if not user.hasProject %}
                            <li>Description du projet</li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    {% endif %}
</div>
