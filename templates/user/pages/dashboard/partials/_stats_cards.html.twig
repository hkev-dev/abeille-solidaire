<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
    {# Wallet Card - Simplified #}
    <div class="card bg-gradient-to-br from-primary-50 to-primary-100">
        <div class="card-body">
            <div class="flex items-center justify-between mb-3">
                <h3 class="text-gray-700">Portefeuille</h3>
                <span class="text-primary ki-duotone ki-wallet text-2xl"></span>
            </div>
            <div class="text-3xl font-bold text-primary">€{{ walletBalance|number_format(2) }}</div>
            {% if walletBalance >= 50 %}
                <div class="mt-2 text-xs text-success-600">
                    <span class="ki-duotone ki-bank text-success mr-1"></span>
                    Retrait disponible
                </div>
            {% endif %}
        </div>
    </div>

    {# Current Flower Card #}
    <div class="card bg-gradient-to-br from-info-50 to-info-100">
        <div class="card-body">
            <div class="flex items-center justify-between mb-3">
                <h3 class="text-gray-700">Fleur Actuelle</h3>
                <span class="text-info ki-duotone ki-flower2 text-2xl"></span>
            </div>
            <div class="text-2xl font-bold text-info">{{ currentFlower ? currentFlower.name : 'Aucune' }}</div>
            <div class="mt-2 text-sm text-gray-600">{{ currentFlower ? '€' ~ currentFlower.totalAmountExpected : '-' }}</div>
        </div>
    </div>

    {# Matrix Children Card #}
    <div class="card bg-gradient-to-br from-warning-50 to-warning-100">
        <div class="card-body">
            <div class="flex items-center justify-between mb-3">
                <h3 class="text-gray-700">Enfants Directs</h3>
                <span class="text-warning ki-duotone ki-people text-2xl"></span>
            </div>
            <div class="text-2xl font-bold text-warning">{{ matrixChildrenCount }}/4</div>
            <div class="mt-2 text-sm text-gray-600">
                {{ 4 - matrixChildrenCount }} emplacement{{ (4 - matrixChildrenCount) > 1 ? 's' : '' }} disponible{{ (4 - matrixChildrenCount) > 1 ? 's' : '' }}
            </div>
        </div>
    </div>
</div>
