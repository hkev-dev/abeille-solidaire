<div class="card h-full">
	<div
		class="card-body flex flex-col place-content-center gap-5">
		{# Hero Image #}
		<div class="flex justify-center">
			<img alt="Teams overview" class="dark:hidden max-h-[180px]" src="{{ asset('admin/media/illustrations/32.svg') }}"/>
			<img alt="Teams overview" class="light:hidden max-h-[180px]" src="{{ asset('admin/media/illustrations/32-dark.svg') }}"/>
		</div>

		{# Content Section #}
		<div class="flex flex-col gap-4">
			<div class="flex flex-col gap-3 text-center">
				<h2 class="text-1.5xl font-semibold text-gray-900">
					{{ title|default('Team Management Hub') }}
				</h2>
				<p class="text-sm font-medium text-gray-700">
					{{ description|default('Create, manage and track your team\'s progress with our comprehensive team management tools.') }}
                </p>
            </div>

            {# Statistics Grid #}
            <div class="grid grid-cols-3 gap-5">
                {% for stat in team_stats|default([
                    {label: 'Total Teams', value: '24', trend: '+3.2%', trend_type: 'success'},
                    {label: 'Active Members', value: '156', trend: '+12.3%', trend_type: 'success'},
                    {label: 'Projects', value: '142', trend: '+8.4%', trend_type: 'success'}
                ]) %}
                    <div class="flex flex-col items-center gap-2">
                        <span class="text-2xl font-bold text-gray-900">{{ stat.value }}</span>
                        <div class="flex items-center gap-1">
                            <span class="text-sm text-gray-600">{{ stat.label }}</span>
                            <span class="badge badge-sm badge-{{ stat.trend_type }}">{{ stat.trend }}</span>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="flex justify-center">
                <a href="#" class="btn btn-primary">Create Team</a>
            </div>
        </div>
    </div>
</div> 
