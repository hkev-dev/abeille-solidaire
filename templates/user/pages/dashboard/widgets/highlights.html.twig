<div class="card h-full">
	<div class="card-header">
		<h3 class="card-title">{{ widget_title|default('Highlights') }}</h3>
		<div class="card-toolbar">
			{% include 'user/components/dropdown-menu.html.twig' with {
                menu_items: highlight_actions|default([
                    {label: 'Activity', icon: 'ki-cloud-change', url: '#'},
                    {label: 'Share', icon: 'ki-share', url: '#', action: 'modal', target: '#share_profile_modal'},
                    {label: 'Settings', icon: 'ki-setting-3', url: '#'}
                ])
            } %}
		</div>
	</div>

	<div
		class="card-body flex flex-col gap-4 p-5 lg:p-7.5 lg:pt-4">
		{# Sales Overview Section #}
		<div class="flex flex-col gap-0.5">
			<span class="text-sm font-normal text-gray-700">
				{{ sales_period|default('All time sales') }}
			</span>
			<div class="flex items-center gap-2.5">
				<span class="text-3xl font-semibold text-gray-900">
					{{ total_sales|default('$295.7k') }}
				</span>
				<span class="badge badge-outline badge-{{ sales_trend_type|default('success') }} badge-sm">
					{{ sales_trend|default('+2.7%') }}
				</span>
			</div>
		</div>

		{# Progress Bars #}
		<div class="flex items-center gap-1 mb-1.5">
			{% for stat in progress_stats|default([
                {value: 60, type: 'success'},
                {value: 25, type: 'brand'},
                {value: 15, type: 'info'}
            ]) %}
				<div class="bg-{{ stat.type }} h-2 w-full max-w-[{{ stat.value }}%] rounded-sm"></div>
			{% endfor %}
		</div>

		{# Legend #}
		<div class="flex items-center flex-wrap gap-4 mb-1">
			{% for item in legend_items|default([
                {label: 'Metronic', type: 'success'},
                {label: 'Bundle', type: 'danger'},
                {label: 'MetronicNest', type: 'info'}
            ]) %}
				<div class="flex items-center gap-1.5">
					<span class="badge badge-dot size-2 badge-{{ item.type }}"></span>
					<span class="text-sm font-normal text-gray-800">{{ item.label }}</span>
				</div>
			{% endfor %}
		</div>

		<div class="border-b border-gray-300"></div>

		{# Statistics List #}
		<div class="grid gap-3">
			{% for stat in statistics|default([
                {icon: 'ki-shop', label: 'Online Store', value: '$172k', trend: '+3.9%', trend_type: 'success'},
                {icon: 'ki-facebook', label: 'Facebook', value: '$85k', trend: '-0.7%', trend_type: 'danger'},
                {icon: 'ki-instagram', label: 'Instagram', value: '$36k', trend: '+8.2%', trend_type: 'success'},
                {icon: 'ki-google', label: 'Google', value: '$26k', trend: '+8.2%', trend_type: 'success'},
                {icon: 'ki-shop', label: 'Retail', value: '$7k', trend: '-0.7%', trend_type: 'danger'}
            ]) %}
				<div class="flex items-center justify-between flex-wrap gap-2">
					<div class="flex items-center gap-1.5">
						<i class="ki-filled {{ stat.icon }} text-base text-gray-500"></i>
						<span class="text-sm font-normal text-gray-900">{{ stat.label }}</span>
					</div>
					<div class="flex items-center text-sm font-medium text-gray-800 gap-6">
						<span class="lg:text-right">{{ stat.value }}</span>
						<span class="lg:text-right">
							<i class="ki-filled ki-arrow-{{ stat.trend_type == 'success' ? 'up' : 'down' }} text-{{ stat.trend_type }}"></i>
							{{ stat.trend }}
						</span>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</div>
