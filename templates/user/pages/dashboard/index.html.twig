{% extends 'user/layouts/default.html.twig' %}

{% set page_title = 'Tableau de bord' %}

{% block content %}
    <div class="container-fixed">
        {# Main Stats Grid #}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
            {# Wallet Card #}
            <div class="card bg-gradient-to-br from-primary-50 to-primary-100">
                <div class="card-body">
                    <div class="flex items-center justify-between mb-3">
                        <h3 class="text-gray-700">Portefeuille</h3>
                        <span class="text-primary ki-duotone ki-wallet text-2xl"></span>
                    </div>
                    <div class="text-3xl font-bold text-primary">€{{ walletBalance|number_format(2) }}</div>
                    {% if currentMembership %}
                        <div class="mt-2 text-xs text-gray-600">
                            Prochain retrait disponible dans {{ withdrawalCooldown ?? 0 }} jours
                        </div>
                    {% endif %}
                </div>
            </div>

            {# Matrix Position Card #}
            <div class="card bg-gradient-to-br from-success-50 to-success-100">
                <div class="card-body">
                    <div class="flex items-center justify-between mb-3">
                        <h3 class="text-gray-700">Position Matrice</h3>
                        <span class="text-success ki-duotone ki-abstract-26 text-2xl"></span>
                    </div>
                    <div class="text-2xl font-bold text-success">Niveau {{ matrixPosition.depth + 1 }}</div>
                    <div class="mt-2 text-sm text-gray-600">Position {{ matrixPosition.position }}/4</div>
                </div>
            </div>

            {# Current Flower Card #}
            <div class="card bg-gradient-to-br from-info-50 to-info-100">
                <div class="card-body">
                    <div class="flex items-center justify-between mb-3">
                        <h3 class="text-gray-700">Fleur Actuelle</h3>
                        <span class="text-info ki-duotone ki-flower2 text-2xl"></span>
                    </div>
                    <div class="text-2xl font-bold text-info">
                        {{ currentFlower ? currentFlower.name : 'Aucune' }}
                    </div>
                    <div class="mt-2 text-sm text-gray-600">
                        {{ currentFlower ? '€' ~ currentFlower.donationAmount : '-' }}
                    </div>
                </div>
            </div>

            {# Matrix Children Card #}
            <div class="card bg-gradient-to-br from-warning-50 to-warning-100">
                <div class="card-body">
                    <div class="flex items-center justify-between mb-3">
                        <h3 class="text-gray-700">Enfants Directs</h3>
                        <span class="text-warning ki-duotone ki-people text-2xl"></span>
                    </div>
                    <div class="text-2xl font-bold text-warning">{{ matrixChildrenCount }}/4</div>
                    <div class="mt-2 text-sm text-gray-600">
                        {{ 4 - matrixChildrenCount }} position{{ (4 - matrixChildrenCount) > 1 ? 's' : '' }} disponible{{ (4 - matrixChildrenCount) > 1 ? 's' : '' }}
                    </div>
                </div>
            </div>
        </div>

        {# Main Content Grid #}
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            {# Left Column - Matrix & Progress #}
            <div class="lg:col-span-2 space-y-6">
                {# Matrix Visualization Card #}
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Votre Position dans la Matrice</h3>
                    </div>
                    <div class="card-body">
                        <div class="flex items-center space-x-4 mb-6">
                            {% if matrixPosition.parent %}
                                <div class="text-center">
                                    <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center mx-auto mb-2">
                                        <span class="text-primary font-semibold">P</span>
                                    </div>
                                    <div class="text-xs text-gray-600">Parent</div>
                                </div>
                            {% endif %}
                            <div class="text-center">
                                <div class="w-16 h-16 rounded-full bg-success-100 flex items-center justify-center mx-auto mb-2 border-2 border-success">
                                    <span class="text-success font-bold">YOU</span>
                                </div>
                                <div class="text-sm font-medium">Position {{ matrixPosition.position }}</div>
                            </div>
                        </div>

                        {% if matrixChildren|length > 0 %}
                            <div class="grid grid-cols-4 gap-4 mt-4">
                                {% for i in 1..4 %}
                                    {% set child = matrixChildren[i-1] ?? null %}
                                    <div class="text-center">
                                        {% if child %}
                                            <div class="w-12 h-12 rounded-full bg-info-100 flex items-center justify-center mx-auto mb-2">
                                                <span class="text-info font-semibold">{{ child.firstName|first }}{{ child.lastName|first }}</span>
                                            </div>
                                            <div class="text-xs text-gray-600">Position {{ i }}</div>
                                        {% else %}
                                            <div class="w-12 h-12 rounded-full bg-gray-100 flex items-center justify-center mx-auto mb-2 border-2 border-dashed border-gray-300">
                                                <span class="text-gray-400">{{ i }}</span>
                                            </div>
                                            <div class="text-xs text-gray-400">Disponible</div>
                                        {% endif %}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>

                {# Flower Progress Card #}
                <div class="card">
                    <div class="card-header border-b">
                        <h3 class="card-title">Progression {{ currentFlower.name }}</h3>
                    </div>
                    <div class="card-body">
                        <div class="relative pt-1">
                            <div class="flex mb-2 items-center justify-between">
                                <div class="text-sm font-medium text-gray-700">
                                    {{ flowerProgress.received }}/{{ flowerProgress.total }} Donations
                                </div>
                                <div class="text-sm font-medium text-primary">
                                    {{ flowerProgress.percentage|number_format }}%
                                </div>
                            </div>
                            <div class="h-3 rounded-full bg-gray-100 overflow-hidden">
                                <div class="h-full rounded-full bg-gradient-to-r from-primary to-primary-400 transition-all duration-500" 
                                     style="width: {{ flowerProgress.percentage }}%">
                                </div>
                            </div>
                            {% if flowerProgress.received == flowerProgress.total %}
                                <div class="mt-2 text-sm text-success">
                                    Félicitations ! Cycle complété
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                {# Recent Activity Card #}
                <div class="card">
                    <div class="card-header border-b">
                        <h3 class="card-title">Activité Récente</h3>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Montant</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                {% for donation in recentDonations %}
                                    <tr>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="flex items-center">
                                                {% set iconClass = {
                                                    'direct': 'text-primary ki-arrow-right',
                                                    'solidarity': 'text-success ki-heart',
                                                    'registration': 'text-info ki-user-square',
                                                    'matrix_propagation': 'text-warning ki-abstract-26',
                                                    'supplementary': 'text-purple ki-plus'
                                                } %}
                                                <span class="ki-duotone {{ iconClass[donation.donationType] ?? 'ki-question' }} mr-2"></span>
                                                <span class="text-sm text-gray-900">
                                                    {{ {
                                                        'direct': 'Don Direct',
                                                        'solidarity': 'Don Solidaire',
                                                        'registration': 'Inscription',
                                                        'matrix_propagation': 'Propagation',
                                                        'supplementary': 'Don Supplémentaire'
                                                    }[donation.donationType] ?? donation.donationType|title }}
                                                </span>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="text-sm font-medium text-gray-900">
                                                €{{ donation.amount|number_format(2) }}
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            {{ donation.transactionDate|date('d M Y H:i') }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="px-2 py-1 text-xs rounded-full {{ donation.isCompleted ? 'bg-success-100 text-success-700' : 'bg-warning-100 text-warning-700' }}">
                                                {{ donation.status|title }}
                                            </span>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4" class="px-6 py-4 text-center text-sm text-gray-500">
                                            Aucune activité récente
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            {# Right Column - Status & Actions #}
            <div class="space-y-6">
                {# Account Status Card #}
                <div class="card">
                    <div class="card-header border-b">
                        <h3 class="card-title">État du Compte</h3>
                    </div>
                    <div class="card-body space-y-4">
                        {# Membership Status #}
                        <div class="p-4 rounded-lg {{ currentMembership ? 'bg-success-50' : 'bg-warning-50' }}">
                            <div class="flex items-center justify-between mb-2">
                                <span class="font-medium">Adhésion Annuelle</span>
                                <span class="px-2 py-1 text-xs rounded-full {{ currentMembership ? 'bg-success-100 text-success-700' : 'bg-warning-100 text-warning-700' }}">
                                    {{ currentMembership ? 'Active' : 'Requise' }}
                                </span>
                            </div>
                            {% if currentMembership %}
                                <div class="text-sm text-gray-600">
                                    Expire le {{ currentMembership.endDate|date('d/m/Y') }}
                                </div>
                            {% else %}
                                <a href="{{ path('app.membership.purchase') }}" class="btn btn-warning btn-sm w-full mt-2">
                                    Payer l'adhésion
                                </a>
                            {% endif %}
                        </div>

                        {# KYC Status #}
                        <div class="p-4 rounded-lg {{ isKycVerified ? 'bg-success-50' : 'bg-danger-50' }}">
                            <div class="flex items-center justify-between mb-2">
                                <span class="font-medium">Vérification KYC</span>
                                <span class="px-2 py-1 text-xs rounded-full {{ isKycVerified ? 'bg-success-100 text-success-700' : 'bg-danger-100 text-danger-700' }}">
                                    {{ isKycVerified ? 'Vérifié' : 'Non Vérifié' }}
                                </span>
                            </div>
                            {% if not isKycVerified %}
                                <a href="#" class="btn btn-danger btn-sm w-full mt-2">
                                    Compléter KYC
                                </a>
                            {% endif %}
                        </div>

                        {# Quick Actions #}
                        <div class="space-y-2">
                            <a href="#" class="btn btn-primary w-full">
                                <span class="ki-duotone ki-gift mr-2"></span>
                                Faire un don
                            </a>
                            {% if user.isEligibleForWithdrawal %}
                                <a href="#" class="btn btn-light-primary w-full">
                                    <span class="ki-duotone ki-bank mr-2"></span>
                                    Retirer des fonds
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>

                {# Direct Children Card #}
                <div class="card">
                    <div class="card-header border-b">
                        <h3 class="card-title">Enfants Directs</h3>
                    </div>
                    <div class="card-body space-y-4">
                        {% for child in matrixChildren %}
                            <div class="flex items-center space-x-3">
                                {% if child.avatar %}
                                    <img src="{{ vich_uploader_asset(child, 'avatarFile') }}" class="w-10 h-10 rounded-full">
                                {% else %}
                                    <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center">
                                        <span class="text-gray-500 text-sm">{{ child.firstName|first }}{{ child.lastName|first }}</span>
                                    </div>
                                {% endif %}
                                <div>
                                    <div class="font-medium">{{ child.fullName }}</div>
                                    <div class="text-sm text-gray-500">{{ child.currentFlower ? child.currentFlower.name : 'Pas de Fleur' }}</div>
                                </div>
                            </div>
                        {% else %}
                            <div class="text-center text-gray-500">
                                Aucun enfant direct dans la matrice
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
