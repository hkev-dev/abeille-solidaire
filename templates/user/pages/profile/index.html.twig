            <div class="col-span-1">
                <div class="grid gap-5 lg:gap-7.5">
                    <div class="card flex-col gap-5 justify-between bg-[center_top_1.3rem] bg-no-repeat pt-5 lg:pt-10 px-5 start-now-bg bg-[length:700px]">
                        {% if app.user.hasProject() %}
                            {% set project = app.user.currentProject %}
                            <div class="text-center">
                                <h3 class="text-gray-900 text-lg font-semibold leading-6 mb-1.5">
                                    Votre projet
                                    <br/>
                                    {{ project.title }}
                                </h3>
                                <span class="text-gray-700 text-sm block mb-5">
                                {{ project.description }}
                            </span>
                                <a class="btn btn-dark btn-sm" href="{{ path('app.user.project.update') }}">
                                    Modifier
                                </a>
                            </div>
                            {% if project.image %}
                                <div class="text-center">
                                    <img alt="" class="max-h-[300px]"
                                         src="{{ vich_uploader_asset(project, 'imageFile') }}"/>
                                </div>
                            {% endif %}

                        {% else %}
                            <div class="text-center">
                                <h3 class="text-gray-900 text-lg font-semibold leading-6 mb-1.5">
                                    Vous n'avez pas encore de projet
                                </h3>
                                <span class="text-gray-700 text-sm block mb-5">
                                </span>
                                <a class="btn btn-dark btn-sm mb-8" href="{{ path('app.user.project.create') }}">
                                    Créer un projet
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" data-modal="true" id="update-password-modal">
        <div class="modal-content modal-center-y max-w-[600px]">
            <div class="modal-header">
                <h3 class="modal-title">Modifier mon mot de passe</h3>
                <button class="btn btn-icon btn-sm btn-light hover:bg-gray-100" data-modal-dismiss="true">
                    <i class="ki-outline ki-cross fs-2"></i>
                </button>
            </div>

            <div class="modal-body p-5">
                {{ form_start(form, {'attr': {'id': 'change-password-form', 'class': 'space-y-8'}}) }}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                    <div class="space-y-2">
                        {{ form_label(form.currentPassword, null, {
                            'label_attr': {
                                'class': 'block text-sm font-medium text-gray-700'
                            }
                        }) }}
                        {{ form_widget(form.currentPassword) }}
                        {{ form_errors(form.currentPassword, {
                            'attr': {
                                'class': 'text-sm text-danger mt-1'
                            }
                        }) }}
                    </div>
                    <div class="space-y-2">
                    </div>
                    <div class="space-y-2">
                        {{ form_label(form.newPassword.first, null, {
                            'label_attr': {
                                'class': 'block text-sm font-medium text-gray-700'
                            }
                        }) }}
                        {{ form_widget(form.newPassword.first) }}
                        {{ form_errors(form.newPassword.first, {
                            'attr': {
                                'class': 'text-sm text-danger mt-1'
                            }
                        }) }}
                    </div>
                    <div class="space-y-2">
                        {{ form_label(form.newPassword.second, null, {
                            'label_attr': {
                                'class': 'block text-sm font-medium text-gray-700'
                            }
                        }) }}
                        {{ form_widget(form.newPassword.second) }}
                        {{ form_errors(form.newPassword.second, {
                            'attr': {
                                'class': 'text-sm text-danger mt-1'
                            }
                        }) }}
                    </div>
                </div>
                {# Submit Button #}
                <div class="text-center mt-8">
                    <button type="submit" class="btn btn-lg btn-primary">
                        Enregistrer
                    </button>
                </div>

                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const modalEl = document.querySelector('#update-password-modal');
            const modal = KTModal.getInstance(modalEl);
        })
    </script>
{% endblock %}
