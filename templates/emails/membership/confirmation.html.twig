{% extends 'emails/base.html.twig' %}

{% block title %}Annual Membership Confirmation - Abeilles Solidaires{% endblock %}

{% block content %}
    <div style="text-align: center; margin-bottom: 30px;">
        <h2 style="color: var(--qrowd-primary);">Annual Membership Confirmed! ðŸŽ‰</h2>
        <p style="font-size: 18px; color: var(--qrowd-black);">Thank you for renewing your commitment to our community.</p>
    </div>

    <div class="info-box">
        <h3>Membership Details</h3>
        <ul style="margin: 0; padding: 0;">
            <li style="color: var(--qrowd-gray); font-weight: 500;">
                Membership Period: 
                <strong style="color: var(--qrowd-black);">
                    {{ startDate }} to {{ endDate }}
                </strong>
            </li>
            <li style="color: var(--qrowd-gray); font-weight: 500;">
                Amount Paid: 
                <strong style="color: var(--qrowd-base);">â‚¬{{ amount|number_format(2, '.', ',') }}</strong>
            </li>
            <li style="color: var(--qrowd-gray); font-weight: 500;">
                Payment Method: 
                <strong style="color: var(--qrowd-black);">{{ paymentMethod|title }}</strong>
            </li>
            {% if paymentMethod == 'cryptocurrency' and cryptoDetails %}
                <li style="color: var(--qrowd-gray); font-weight: 500;">
                    Crypto Amount: 
                    <strong style="color: var(--qrowd-black);">
                        {{ cryptoDetails.amount }} {{ cryptoDetails.currency }}
                    </strong>
                </li>
            {% endif %}
        </ul>
    </div>

    <div style="margin: 30px 0;">
        <h3 style="color: var(--qrowd-primary);">Your Benefits Include:</h3>
        <ul>
            <li>Full access to all flower cycles</li>
            <li>Project creation and management</li>
            <li>Ability to receive and make donations</li>
            <li>Withdrawal privileges</li>
            <li>Community support features</li>
        </ul>
    </div>

    <div class="info-box" style="background: var(--qrowd-extra);">
        <h4>Important Dates</h4>
        <ul style="margin: 0;">
            <li>Membership Start: {{ startDate }}</li>
            <li>Next Renewal: {{ endDate }}</li>
        </ul>
        <p style="margin-top: 15px; color: var(--qrowd-black); font-size: 14px;">
            <strong>Note:</strong> To maintain uninterrupted access, please ensure renewal before the end date.
        </p>
    </div>

    <div style="text-align: center; margin-top: 30px;">
        <a href="{{ dashboardUrl }}" class="button">View Membership Details</a>
    </div>

    <p style="text-align: center; margin-top: 30px; color: var(--qrowd-gray); font-size: 14px;">
        Questions about your membership? Contact our support team at 
        <a href="mailto:support@abeillesolidaires.club" style="color: var(--qrowd-primary);">
            support@abeillesolidaires.club
        </a>
    </p>
{% endblock %}
