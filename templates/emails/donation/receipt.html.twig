{% extends 'emails/base.html.twig' %}

{% block content %}
	<div style="text-align: center; margin-bottom: 30px;">
		<h2>Donation Receipt</h2>
		<p style="color: var(--qrowd-primary); font-size: 18px;">Thank you for your contribution!</p>
	</div>

	<div class="info-box" style="background: #fff; border: 2px solid var(--qrowd-extra);">
		<div style="text-align: right; margin-bottom: 20px;">
			<strong>Receipt #:</strong>
			{{ receipt.receipt_number }}<br>
			<strong>Date:</strong>
			{{ receipt.donation_date|date("d/m/Y H:i") }}
		</div>

		<h3 style="color: var(--qrowd-primary); border-bottom: 1px solid var(--qrowd-extra); padding-bottom: 10px;">
			Donation Details
		</h3>

		<table style="width: 100%; border-collapse: collapse;">
			<tr>
				<td style="padding: 10px 0;">
					<strong>Donor:</strong>
				</td>
				<td style="padding: 10px 0;">{{ receipt.donor }}</td>
			</tr>
			<tr>
				<td style="padding: 10px 0;">
					<strong>Recipient:</strong>
				</td>
				<td style="padding: 10px 0;">{{ receipt.recipient }}</td>
			</tr>
			<tr>
				<td style="padding: 10px 0;">
					<strong>Amount:</strong>
				</td>
				<td style="padding: 10px 0; color: var(--qrowd-primary);">
					â‚¬{{ receipt.amount|number_format(2, '.', ',') }}
				</td>
			</tr>
			<tr>
				<td style="padding: 10px 0;">
					<strong>Type:</strong>
				</td>
				<td style="padding: 10px 0;">{{ receipt.donation_type|title }}</td>
			</tr>
			<tr>
				<td style="padding: 10px 0;">
					<strong>Flower:</strong>
				</td>
				<td style="padding: 10px 0;">{{ receipt.flower_name }}</td>
			</tr>
		</table>
	</div>

	<div style="text-align: center; margin-top: 30px; color: var(--qrowd-gray);">
		<p>This is an official receipt from Abeille Solidaire.</p>
		<p>Please keep this for your records.</p>
	</div>
{% endblock %}
