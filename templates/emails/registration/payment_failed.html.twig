{% extends 'emails/base.html.twig' %}

{% block content %}
	<div style="text-align: center; margin-bottom: 30px;">
		<h2 style="color: #dc3545;">Payment Failed</h2>
	</div>

	<div class="info-box" style="border-left-color: #dc3545;">
		<h3>Payment Error Details</h3>
		<p style="color: var(--qrowd-black);">{{ errorMessage ?? 'Your registration payment could not be processed.' }}</p>
	</div>

	<div style="text-align: center; margin: 30px 0;">
		<p style="color: var(--qrowd-primary);">Don't worry! You can try the payment again:</p>
		<a href="{{ absolute_url(retryUrl) }}" class="button">Try Payment Again</a>
	</div>

	<div class="info-box">
		<h4>Need Help?</h4>
		<p>Contact our support team at support@abeilleolidaire.club</p>
	</div>
{% endblock %}
